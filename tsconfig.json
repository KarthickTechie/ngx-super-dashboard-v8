{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "ng-base-lib": ["dist/ng-base-lib"],
      "ng-base-lib/*": ["dist/ng-base-lib/*"],
      "ngx-super-dashboard": ["dist/ngx-super-dashboard"],
      "ngx-super-dashboard/*": ["dist/ngx-super-dashboard/*"]
    },
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
